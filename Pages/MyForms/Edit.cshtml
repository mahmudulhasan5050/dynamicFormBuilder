@page
@model FormWizard.Pages.MyForms.EditModel
@{
}

<div class="row mt-6">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <div class="col-6">
            <h2 class="h2 d-inline align-middle" style="color: rgb(29, 82, 125);"> <strong>EDIT FORM</strong></h2>
        </div>
        <div class="card p-3 mt-4">
	        <div class="card-body mt-2">
                <section>
                    <form method="post">
                        @if (!ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <p>Please correct the following errors:</p>
                                <ul>
                                    @foreach (var modelStateEntry in ViewData.ModelState.Values)
                                    {
                                        foreach (var error in modelStateEntry.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </ul>
                            </div>
                        }
                        <input hidden asp-for="myForm.Id" />
                            <div class="mb-3">
                            <label asp-for="myForm.Name"></label>
                            <input asp-for="myForm.Name" class="form-control" />
                                <span asp-validation-for="myForm.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                            <label asp-for="myForm.CategoryId"></label>
                                <select asp-for="myForm.CategoryId" asp-items="@(ViewData["categoryList"] as IEnumerable<SelectListItem>)" class="form-control">
                                <option disabled selected>--- Select Item ---</option>
                                </select>
                            </div>
                            <div class="mb-3">
                            <label asp-for="myForm.CountryId"></label>
                                <select asp-for="myForm.CountryId" asp-items="@(ViewData["countryList"] as IEnumerable<SelectListItem>)" class="form-control">
                                <option disabled selected>--- Select Item ---</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <input asp-for="myForm.IsInUse" class="form-check-input" />
                                <label asp-for="myForm.IsInUse"></label>
                            </div>
                            <div class="mb-3">
                                <input asp-for="myForm.CreatedAt" class="form-control" hidden/>
                            </div>
                            <div class="row justify-content-end">
							    <div class="col-md-auto">
                                     <a asp-page="Index" class="btn btn-light bg-white btn-sm">Back</a>
                                     <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                </div>
                            </div>
                    </form>
                </section>
	        </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6 text-center">
       <img src="~/images/Edit.png" class="img-fluid m-auto mt-2 display-flex justify-content-start" alt="Responsive image"/>
    </div>
</div>
