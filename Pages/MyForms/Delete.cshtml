@page
@model FormWizard.Pages.MyForms.DeleteModel
@{
}

<div class="row mt-6">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <div class="col-6">
            <h2 class="h2 d-inline align-middle" style="color: rgb(29, 82, 125);"> <strong>DELETE FORM</strong></h2>
        </div>
        <div class="card p-3 mt-4">
            <div class="card-body mt-2">
                <section>
                    <form method="post">
                        <input hidden asp-for="myForm.Id" />
                        <div class="mb-3">
                            <input asp-for="myForm.Name" disabled class="form-control" />
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-md-auto">
                                <a asp-page="Index" class="btn btn-light bg-white btn-sm">Back</a>
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </div>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6 text-center">
        <img src="~/images/Delete.png" class="img-fluid m-auto mt-2 display-flex justify-content-start" alt="Responsive image" />
    </div>
</div>
