@page
@model FormWizard.Pages.Participants.EditModel
@{
}

<div class="row mt-6">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <div class="col-12">
            <h2 class="h2 d-inline align-middle" style="color: rgb(29, 82, 125);"> <strong>EDIT PARTICIPANT</strong></h2>
        </div>
        <div class="card p-3 mt-4">
            <div class="card-body mt-2">
                <section>
                    <form method="post">
                        <input hidden asp-for="participant.Id" />
                            <div class="mb-3">
                                <label asp-for="participant.Name"></label>
                                <input asp-for="@Model.participant.Name" type="text" class="w-100 mt-3 form-control" />
                                <span asp-validation-for="participant.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="participant.Email"></label>
                                <input asp-for="participant.Email" class="w-100 mt-3 form-control" />
                                <span asp-validation-for="participant.Email" class="text-danger"></span>
                            </div>
                        <div class="row justify-content-end">
                            <div class="col-md-auto">
                                <a asp-page="Index" class="btn btn-light bg-white btn-sm">Back</a>
                                <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                            </div>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6 text-center">
        <img src="~/images/Edit.png" class="img-fluid m-auto mt-2 display-flex justify-content-start" alt="Responsive image" />
    </div>
</div>
