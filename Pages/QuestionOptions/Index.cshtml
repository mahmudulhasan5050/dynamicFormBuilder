@page
@model FormWizard.Pages.QuestionOptions.IndexModel
@{
}

<div class="container p-0">
    <div class="row pt-4">
        <div class="col-6">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb d-flex justify-content-start  align-middle">
                    <li class="breadcrumb-item h2" style="color: rgb(29, 82, 125);"><a asp-page="/MyForms/index"><strong>FORM</strong></a></li>
                    <li class="breadcrumb-item h2" style="color: rgb(29, 82, 125);"><a asp-page="/Questions/Index" asp-route-myformid="@(ViewData["MyFormId"])"><strong>QUESTION</strong></a></li>
                    <li class="breadcrumb-item h2 active" aria-current="page" style="color: rgb(29, 82, 125);"><strong>OPTIONS</strong></li>
                </ol>
            </nav>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <form method="post">
                <a asp-page="Create" asp-route-questionid="@(ViewData["QuestionId"])" asp-route-questiontype="@(ViewData["QuestionType"])" class="btn btn-facebook btn-sm">
                    <i class="bi bi-plus-circle"></i>&nbsp;
                    New Option
                </a>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-borderless" style="width:100%">
                        <thead>
                            <tr>
                                <th class="text-primary">
                                    Main Question
                                </th>
                                <th class="text-primary">
                                    Option
                                </th>
                                <th class="text-primary">
                                    Question Type
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model.questionOption)
                            {
                                <tr>
                                    <td class="text-muted" width="30%">
                                        @obj.Question.QuestionText
                                    </td>
                                    <td class="text-muted" width="30%">
                                        @obj.OptionText
                                    </td>
                                    <td class="text-muted" width="20%">
                                        @obj.OptionType
                                    </td>
                                    <td width="20%">
                                        <div>
                                            <nav class="nav btn-group">
                                                <a asp-page="Edit" asp-route-questionoptionid="@obj.Id" asp-route-myformid="@(ViewData["MyFormId"])" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-pencil-square style=" font-size: 0.8rem; color: white;""></i>
                                                    Edit
                                                </a>
                                                &nbsp &nbsp &nbsp
                                                <a asp-page="Delete" asp-route-questionoptionid="@obj.Id" asp-route-questionid="@obj.QuestionId" asp-route-myformid="@(ViewData["MyFormId"])" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash-fill style=" font-size: 0.8rem; color: white;""></i>
                                                    Delete
                                                </a>
                                                @*                            @if (obj.Type == FormWizard.Model.Question.QuestionType.radio)
                                            {
                                            <a asp-page="/QuestionOptions/Index" asp-route-id="@obj.Id" asp-route-type="@obj.Type" class="btn btn-primary btn-sm">
                                            <i class="bi bi-pencil-square style="font-size: 0.8rem; color: white;""></i>
                                            Options
                                            </a>
                                            }*@
                                            </nav>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>