@page
@model FormWizard.Pages.QuestionOptions.CreateModel
@{
}

<div class="row mt-6">
    <div class="col-md-1"></div>
    <div class="col-md-4">  
        <div class="col-md-12">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb d-flex justify-content-start  align-middle" >
                    <li class="breadcrumb-item h2" style="color: rgb(29, 82, 125);"><a asp-page="Index" asp-route-questionid="@ViewData["QuestionId"]" asp-route-questiontype="@ViewData["QuestionType"]"><strong>QUESTION OPTIONS</strong></a></li>
                    <li class="breadcrumb-item h2 active" aria-current="page" style="color: rgb(29, 82, 125);"><strong>NEW</strong></li>
                </ol>
            </nav>
        </div>
        <div class="card p-3 mt-4">
            <div class="card-body mt-2">
                <section>
                    <form method="post">
                        <input asp-for="questionOption.QuestionId" value="@(ViewData["QuestionId"])" hidden />
                        <div class="mb-3">
                            <label asp-for="questionOption.OptionText"></label>
                            <input asp-for="questionOption.OptionText" class="form-control" />
                            <span asp-validation-for="questionOption.OptionText" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="questionOption.OptionType"></label>
                            <input asp-for="questionOption.OptionType" value="@(ViewData["QuestionType"])" readonly="true" class="form-control" />
                            <span asp-validation-for="questionOption.OptionType" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="questionOption.OptionValue"></label>
                            <input asp-for="questionOption.OptionValue" class="form-control" />
                            <span asp-validation-for="questionOption.OptionValue" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="questionOption.OrderOfDisplay"></label>
                            <input asp-for="questionOption.OrderOfDisplay" class="form-control" />
                            <span asp-validation-for="questionOption.OrderOfDisplay" class="text-danger"></span>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-md-auto">
                                <button type="submit" class="btn btn-primary btn-sm">Add</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6 text-center">
        <img src="~/images/NewItem.png" class="img-fluid m-auto mt-2 display-flex justify-content-start" alt="Responsive image" />
    </div>
</div>