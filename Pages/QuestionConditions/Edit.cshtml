@page
@using FormWizard.Model;
@model FormWizard.Pages.QuestionConditions.EditModel
@{
}

<div class="row mt-6">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <div class="col-md-12">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb d-flex justify-content-start  align-middle" >
                    <li class="breadcrumb-item h2" style="color: rgb(29, 82, 125);"><a asp-page="Index" asp-route-questionid="@Model.questionId" asp-route-myformid="@Model.myFormId"><strong>SUB QUESTION</strong></a></li>
                    <li class="breadcrumb-item h2 active" aria-current="page" style="color: rgb(29, 82, 125);"><strong>EDIT</strong></li>
                </ol>
            </nav>
        </div>
        <div class="card p-3 mt-4">
            <div class="card-body mt-2">
                <section>
                    <form method="post">
                        <input asp-for="questionCondition.Id" hidden />
                        <div class="mb-3">
                            <label asp-for="questionCondition.Value"></label>
                            <select asp-for="questionCondition.Value" asp-items="@Model.optionList">
                                <option disabled selected>--- Select Item ---</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="questionCondition.Question"></label>
                            <input asp-for="questionCondition.QuestionText" class="form-control" />
                            <span asp-validation-for="questionCondition.QuestionText" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="questionCondition.QuestionDescription"></label>
                            <input asp-for="questionCondition.QuestionDescription" class="form-control" />
                            <span asp-validation-for="questionCondition.QuestionDescription" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="questionCondition.Type"></label>
                            <select asp-for="questionCondition.Type" asp-items="Html.GetEnumSelectList<QuestionCondition.QuestionType>()">
                                <option disabled selected>--- Select Item ---</option>
                            </select>
                        </div>
@*                        <div class="mb-3">
                            <label asp-for="questionCondition.IsRequired"></label>
                            <input asp-for="questionCondition.IsRequired" class="form-check-input" />
                            <span asp-validation-for="questionCondition.IsRequired" class="text-danger"></span>
                        </div>*@
                        <div class="mb-3">
                            <label asp-for="questionCondition.QuestionId"></label>
                            <input asp-for="questionCondition.QuestionId" hidden />
                        </div>
                        <div class="mb-3">
                            <input asp-for="questionCondition.CreatedAt" class="form-control" hidden />
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-md-auto">
                                <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                            </div>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6 text-center">
        <img src="~/images/Edit.png" class="img-fluid m-auto mt-2 display-flex justify-content-start" alt="Responsive image" />
    </div>
</div>


