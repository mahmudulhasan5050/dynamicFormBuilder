<div class="row">
    <div class="col-md-5">
        <div class="card p-3">
            <br />
			<div class="card-header">
				<h6 class="card-subtitle text-muted">Use a local account to log in.</h6>
			</div>
	        <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <p class="text-primary">Email</p>
                        <div class="form-outline mb-4"> 
                            <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <p class="text-primary">Password</p>
                        <div class="form-outline mb-4">
                            <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            </div>                            
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div >
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label fw-light">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                                &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-secondary">Resend email confirmation</a>
                            </div>
                        </div>
                        <br />
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-block">Log in</button>
                            @*<br />
                            <br />
                            <a class="w-100 btn btn-lg btn-light bg-white btn-block" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>*@
                         </div>
                   
                
                        <br />
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" >Forgot your password?</a>
                            </p>
                        </div>
                    </form>
                </section>
	        </div>
        </div>

    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6 text-center">
        <br/>
        <br/>
       <img src="~/images/Login_new.png" class="img-fluid m-auto display-flex justify-content-start" alt="Responsive image"/>
    </div>
</div>


